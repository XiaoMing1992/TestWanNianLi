<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">    <!--背景颜色-->
    <solid android:color="#E8E8E8" />    <!--设置边距-->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />    <!--控制边界线颜色和大小-->

    <!--设置边框距离-->
    <stroke
        android:width="1dp"
        android:color="#969696" />

    <!--控制界面颜色渐变-->
    <gradient
        android:angle="90"
        android:endColor="#FFFFFF"
        android:startColor="#E9E9E9"
        android:type="linear" />

    <!--控制圆角大小-->
    <corners android:radius="10dp" />
</shape>
